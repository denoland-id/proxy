{
  "name": "@denoland-id/proxy",
  "description": "Vercel proxy for denoland.id website and module registry ðŸ”€",
  "version": "0.1.0",
  "repository": "git@github.com:denoland-id/proxy.git",
  "author": "Griko Nibras <griko@denoland.id>",
  "scripts": {
    "format": "yarn format:index && yarn format:api",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:api": "prettier --write \"api/**/*.{js,ts}\"",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.7",
    "@vercel/node": "^1.7.2",
    "all-contributors-cli": "^6.16.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "node-fetch": "^3.1.1",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "api/**/*.{js,ts}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
